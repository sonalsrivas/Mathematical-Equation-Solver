        "            type_,\n",
        "            self.tokenindex,\n",
        "            self.tokenprio + self.tmpprio,\n",
        "            0,\n",
        "        )\n",
        "        while len(operstack) > 0:\n",
        "            if operator.prio_ <= operstack[len(operstack) - 1].prio_:\n",
        "                tokenstack.append(operstack.pop())\n",
        "            else:\n",
        "                break\n",
        "        operstack.append(operator)\n",
